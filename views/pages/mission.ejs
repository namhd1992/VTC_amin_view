															<input id="file_giftcode" type="file" min="1">
															<p class="help-block">
																<span style="color:#36c6d3">A: </span> code , 
																<span style="color:#36c6d3">B:</span> serial, 
																<span style="color:#36c6d3">C:</span> Giftcode expired date
															</p>
														</div> -->
														<div class="col-xs-4 type_award turn_spin_award">
															<select id="select_spin_award" class="form-control select2">
																<option value="0">Chọn Spin</option>
															</select>
														</div>
													</div>

													<div class="form-group">
														<label class="control-label col-md-3">Loại hạn mức</label>
														<div class="col-xs-2">
															<select id="single_select_limit" class="form-control">
																<option value="">Unlimited</option>
																<option value="DAY">Day</option>
																<option value="EVENT">Event</option>
															</select>
														</div>
														<label class="control-label col-md-2">Giá Trị Hạn Mức</label>
														<div class="col-xs-3">
															<input type="number" min="1" class="value_limit_award form-control" name="limit_value" value=1>
														</div>
													</div>

													<div class="form-group">
														<label class="col-md-3 control-label">Award</label>
														<div class="col-md-7">
															<input type="number" min="1" class="txt_add_edit_item_award form-control" name="award" value=1>
															<p class="help-block">Giá trị (phần thưởng khi hoàn thành nhiệm vụ)</p>
														</div>
													</div>

													<div class="form-group group_target group_fb">
														<label class="col-md-3 control-label">Facebook value</label>
														<div class="col-md-7">
															<input type="text" class="txt_add_edit_item_fb_value form-control" value="" />
														</div>
													</div>
													<div class="form-group group_target group_game_level">
														<label class="col-md-3 control-label">Game level - server</label>
														<div class="col-md-7">
															<input type="text" class="txt_add_edit_item_game_value form-control" value="" />
														</div>
													</div>
													<div class="form-group">
														<label class="col-md-3 control-label">Description</label>
														<div class="col-md-7">
															<textarea class="txt_add_edit_item_desc form-control" name="description" placeholder="Game description"></textarea>
															<p class="help-block">Mô tả (hiện trên client)</p>
														</div>
													</div>
													<div class="form-group">
														<label class="col-md-3 control-label">Daily</label>
														<div class="col-xs-8">
															<select name="status" class="bs-select form-control input-small select_daily">
																<option value=false>Không</option>
																<option value=true>Có</option>
															</select>
															<input type="hidden" name="daily" value=true class="hidden_item_daily" />
															<p class="help-block">Lặp lại (có/không lặp lại theo ngày)</p>
														</div>
													</div>
													<div class="form-group">
														<label class="control-label col-md-3">From date</label>
														<div class="col-md-7">
															<div class="input-group date form_datetime" style="max-width:100% !important;border: 1px lightblue solid;">
																<input type="text" size="16" readonly class="form-control txt_add_edit_item_from_date">
																<span class="input-group-btn">
																	<button class="btn default date-set" type="button">
																		<i class="fa fa-calendar"></i>
																	</button>
																</span>
															</div>
														</div>
													</div>
													<div class="form-group">
														<label class="control-label col-md-3">To date</label>
														<div class="col-md-7">
															<div class="input-group date form_datetime" style="max-width:100% !important;border: 1px lightblue solid;">
																<input type="text" size="16" readonly class="form-control txt_add_edit_item_to_date">
																<span class="input-group-btn">
																	<button class="btn default date-set" type="button">
																		<i class="fa fa-calendar"></i>
																	</button>
																</span>
															</div>
														</div>
													</div>
													<div class="form-group">
														<label class="col-md-3 control-label">Trạng Thái</label>
														<div class="col-md-6">
															<select name="status" class="bs-select form-control input-medium select_status" data-style=" btn-success">
																<option value="active">Hoạt Động</option>
																<option value="inactive">Không Hoạt Động</option>
															</select>
															
															<input type="hidden" name="status" value="active" class="hidden_item_status" />
															<span class="col-md-3" style="float:right;">  
																<label class="control-label">Nổi Bật :</label>

																<!-- checkbox nổi bật -->
																<input id="highlights" type="checkbox" name="my-checkbox" data-on-text="ON" data-off-text="OFF"
																 data-on-color="success" data-off-color="success">
															</span>
															<p class="help-block">Trạng thái (ẩn/hiện trên client)</p>
															
														</div>
													</div>
												</div>
											</form>
										</div>
									</div>
									<div class="modal-footer">
										<button type="button" data-dismiss="modal" class="btn btn-outline dark">Close</button>
										<button type="button" class="btn green btn_modal_save_new">Add</button>
										<button type="button" class="btn green btn_modal_save_update">Save Change</button>
									</div>
								</div>
