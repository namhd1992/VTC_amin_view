<div class="clearfix"></div>
<!-- END HEADER & CONTENT DIVIDER -->
<!-- BEGIN CONTAINER -->
<div class="page-container">
    <% include ../partials/side_bar %>
    <!-- BEGIN CONTENT -->
    <div class="page-content-wrapper">
        <!-- BEGIN CONTENT BODY -->
        <div class="page-content">
            <% include ../partials/page_title %>
            <!-- BEGIN PAGE BREADCRUMB -->
            <ul class="page-breadcrumb breadcrumb">
                <li>
                    <a href="./">Dashboard</a>
                    <i class="fa fa-circle"></i>
                </li>
            </ul>
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-dark">
                        <i class="icon-settings font-dark"></i>
                        <span class="caption-subject bold uppercase">Shop Promotion</span>
                    </div>
                </div>

                <div class="portlet-body">
                    <div class="search_wrap">
                        <div class="input-group">
                            <button class="btn sbold green btn_add_new_item"> Add New <i class="fa fa-plus"></i></button>
                        </div>
                        <div class="input-group">
                            <input type="text" class="search_input"/>
                        </div>
                        <div class="input-group">
                            <button class="search_submit btn btn-success">Apply</button>
                            <button class="search_clear btn" style="margin-left:10px;">Clear</button>
                        </div>
                    </div>
                    <table class="table table-striped table-bordered table-hover table-checkable order-column" id="page_datatable"></table>
                    <div class="datatable_paging"></div>
                </div>

                <!--confirm modal-->
                <div id="modal_confirm" class="modal fade modal-sm" tabindex="-1" data-width="420">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                        <h4 class="modal-title"></h4>
                    </div>
                    <div class="modal-body">
                        Are you sure?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn green btn_confirm_yes">Yes</button>
                        <button type="button" data-dismiss="modal" class="btn btn-outline dark">No</button>
                    </div>
                </div>

                <!--modal add edit-->
                <div id="modal_add_edit" class="modal fade modal-scroll" tabindex="-1" data-width="70%">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                        <h4 class="modal-title">Create New Item</h4>
                    </div>
                    <div class="modal-body">
                        <div class="portlet-body form">
                            <!-- BEGIN FORM-->
                            <div id="add_giftcode_form" action="#" class="form-horizontal"
                                  enctype="multipart/form-data">
                                <div class="form-body">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Name</label>
                                        <div class="col-md-6">
                                            <input type="text" class="txt_add_edit_item_name form-control" name="name" placeholder="Enter event name">
                                            <p class="help-block">Tên (phân biệt trên adb)</p>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <form id="form_upload" enctype="multipart/form-data">
                                            <label class="col-md-3 control-label">Icon Upload</label>
                                            <div class="col-md-4">
                                                <input type="file" name="file"
                                                       class="txt_add_edit_item_upload form-control"/>
                                                <p class="help-block">Banner của sale event</p>
                                            </div>
                                            <div class="col-md-5">
                                                <button type="button"
                                                        class="btn btn-outline blue btn_modal_upload">Upload
                                                </button>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Banner</label>
                                        <div class="col-md-9">
                                            <div class="image_item"></div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Shop</label>
                                        <div class="col-md-6">
                                            <select id="single_select_shop" class="form-control select2">
                                                <option></option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-3">Start date</label>
                                        <div class="col-md-6">
                                            <div class="input-group date form_datetime"
                                                 style="max-width:100% !important;border: 1px lightblue solid;">
                                                <input type="text" size="16" readonly class="form-control txt_add_edit_item_date_start">
                                                <span class="input-group-btn">
                                                    <button class="btn default date-set" type="button">
                                                        <i class="fa fa-calendar"></i>
                                                    </button>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-3">End date</label>
                                        <div class="col-md-6">
                                            <div class="input-group date form_datetime" style="max-width:100% !important;border: 1px lightblue solid;">
                                                <input type="text" size="16" readonly class="form-control txt_add_edit_item_date_end">
                                                <span class="input-group-btn">
                                                    <button class="btn default date-set" type="button">
                                                        <i class="fa fa-calendar"></i>
                                                    </button>
                                                </span>
                                            </div>
                                            <hr style="border: 1px solid #EEE;margin-top: 85px;">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label"></label>
                                        <div class="col-md-9">
                                            <h2 style="margin-left: 147px;">Danh Sách Item KM</h2>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label"></label>
                                        <div class="col-md-3" style="margin-top: 7px;">
                                            Item
                                        </div>
                                        <div class="col-md-2" style="margin-top: 7px;">
                                            Price
                                        </div>
                                        <div class="col-md-2" style="margin-top: 7px;">
                                            Quantity
                                        </div>
                                    </div>
                                    <!-- <div class="form-group">
                                        <label class="col-md-3 control-label">Item list</label>
                                        <div class="col-md-3">
                                            <select id="single_select_item" class="form-control select2">
                                                <option></option>
                                            </select>
                                        </div>
                                        <div class="col-md-2">
                                            <input type="text" class="form-control txt_promotion_price" placeholder="price">
                                        </div>
                                        <div class="col-md-2">
                                            <input type="text" class="form-control txt_promotion_quantity" placeholder="quantity">
                                        </div>
                                        <div class="col-md-2">
                                            <a class="btn btn-icon-only green btn_add_more_item">
                                                <i class="fa fa-plus"></i>
                                            </a>
                                        </div>
                                    </div> -->
                                    <div class="item_list">
                                    </div>
                                    <div class="form-group" style="display:none">
                                        <label class="col-md-3 control-label">Status</label>
                                        <div class="col-md-4">
                                            <select name="status"
                                                    class="bs-select form-control input-small select_status"
                                                    data-style=" btn-success">
                                                <option value="active">Active</option>
                                                <option value="inactive">Inactive</option>
                                            </select>
                                            <input type="hidden" name="status" value="active"
                                                   class="hidden_item_status"/>
                                            <p class="help-block">Trạng thái (ẩn/hiện trên client)</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" data-dismiss="modal" class="btn btn-outline dark">Close</button>
                        <button type="button" class="btn green btn_modal_save_new">Add</button>
                        <button type="button" class="btn green btn_modal_save_update">Save Change</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
