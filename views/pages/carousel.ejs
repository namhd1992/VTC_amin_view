		<div class="clearfix"> </div>
		<!-- END HEADER & CONTENT DIVIDER -->
		<!-- BEGIN CONTAINER -->
		<div class="page-container">
			<% include ../partials/side_bar %>
				<!-- BEGIN CONTENT -->
				<div class="page-content-wrapper">
					<!-- BEGIN CONTENT BODY -->
					<div class="page-content">
						<% include ../partials/page_title %>
							<!-- BEGIN PAGE BREADCRUMB -->
							<ul class="page-breadcrumb breadcrumb">
								<li>
									<a href="./">Dashboard</a>
									<i class="fa fa-circle"></i>
								</li>
							</ul>
							<div class="portlet light bordered">
								<div class="portlet-title">
									<div class="caption font-dark">
										<i class="icon-settings font-dark"></i>
										<span class="caption-subject bold uppercase">Carousel</span>
									</div>
								</div>

								<div class="portlet-body">
									<div class="search_wrap">
										<div class="input-group">
											<button class="btn sbold green btn_add_new_item"> Add New
												<i class="fa fa-plus"></i>
											</button>
										</div>
										<!-- <div class="input-group">
											<input type="text" class="search_input" />
										</div>
										<div class="input-group">
											<button class="search_submit btn btn-success">Apply</button>
											<button class="search_clear btn" style="margin-left:10px;">Clear</button>
										</div> -->
									</div>
									<table class="table table-striped table-bordered table-hover table-checkable order-column" id="page_datatable"></table>
									<div class="datatable_paging"></div>
								</div>

								<!--confirm modal-->
								<div id="modal_confirm" class="modal fade modal-sm" tabindex="-1" data-width="420">
									<div class="modal-header">
										<button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
										<h4 class="modal-title"></h4>
									</div>
									<div class="modal-body">
										Are you sure?
									</div>
									<div class="modal-footer">
										<button type="button" class="btn green btn_confirm_yes">Yes</button>
										<button type="button" data-dismiss="modal" class="btn btn-outline dark">No</button>
									</div>
								</div>

								<!--modal add edit-->
								<div id="modal_add_edit" class="modal fade modal-scroll" tabindex="-1" data-width="70%">
									<div class="modal-header">
										<button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
										<h4 class="modal-title">Create New Item</h4>
									</div>
									<div class="modal-body">
										<div class="portlet-body form">
											<!-- BEGIN FORM-->
											<form id="add_carousel_form" action="#" class="form-horizontal" enctype="multipart/form-data">
												<div class="form-body">

													<div class="form-group">
														<label class="col-md-3 control-label">Carousel Type</label>
														<div class="col-md-7">
															<select id="single_select_carousel_type" class="form-control select2">
																<option value="0">=== Hãy Chọn Type ===</option>
																<option value="IMAGE">Image</option>
																<option value="TEXT">Text Highlights</option>
															</select>
														</div>
													</div>

													<div id="carousel_text_highlights">

														<div class="form-group">
															<label class="col-md-3 control-label">Image</label>
															<div class="col-md-6">
																<label for="file" style="position: absolute;" class="btn yellow">Chọn Ảnh</label>
																<input type="button" id="upload_image_text" style="position: absolute; left: 126px;" class="btn green" value="Upload">
																<input type="file" style="opacity: 0;position: relative;height: 44px;width: 119px" id="txt_add_edit_image_text" />
																<img width="300px;" id="review_image_text" />
															</div>
														</div>

														<div class="form-group form_link_image_text form_link_image">
															<label class="col-md-3 control-label">Link Image</label>
															<div class="col-md-6">
																<div id="link_image_text"></div>
															</div>
														</div>

														<div class="form-group">
															<label class="col-md-3 control-label">Content</label>
															<div class="col-md-9">
																<textarea id="content" name="content" class="txt_add_edit_item_content form-control"></textarea>
															</div>
														</div>

													</div>
													<div id="carousel_image">

													<div class="form-group">
														<label class="col-md-3 control-label">Name</label>
														<div class="col-md-6">
															<input type="text" class="txt_add_edit_item_name form-control" name="name" placeholder="Enter name">
														</div>
													</div>
													<div class="form-group">
														<label class="col-md-3 control-label">Image</label>
														<div class="col-md-6">
															<label for="file" style="position: absolute;" class="btn yellow">Chọn Ảnh</label>
															<input type="file" style="opacity: 0;position: relative;height: 44px;width: 119px" class="txt_add_edit_item_file" />
															<div class="txt_add_edit_item_image carousel_img" >
																<div></div>
															</div>
															<p class="help-block">Khung hiển thị : 1736x700</p>
														</div>
													</div>
													<div class="form-group">
														<label class="col-md-3 control-label">Link Image</label>
														<div class="col-md-6">
															<div class="txt_add_edit_item_thumb view_link" placeholder="Link Image"></div>
														</div>
													</div>
													<div class="form-group">
														<label class="col-md-3 control-label">Direct Url</label>
														<div class="col-md-6">
															<input type="text" class="txt_add_edit_item_url form-control" placeholder="direct url">
														</div>
													</div>
													<div class="form-group">
														<label class="col-md-3 control-label">Position</label>
														<div class="col-md-6">
															<input type="number" min=1 value=1 class="txt_add_edit_item_position form-control" name="position">
														</div>
													</div>
													<div class="form-group">
														<label class="col-md-3 control-label">Status</label>
														<div class="col-md-4">
															<select name="status" class="bs-select form-control input-small select_status" data-style=" btn-success">
																<option value="active">Active</option>
																<option value="inactive">Inactive</option>
															</select>
															<input type="hidden" name="status" value="active" class="hidden_item_status" />
															<p class="help-block">Để ẩn hoặc hiện trên app</p>
														</div>
													</div>
												</div>
												</div>
											</form>
										</div>
									</div>
									<div class="modal-footer">
										<button type="button" data-dismiss="modal" class="btn btn-outline dark">Close</button>
										<button type="button" class="btn green btn_modal_save_new">Add</button>
										<button type="button" class="btn green btn_modal_save_update">Save Change</button>
									</div>
								</div>
