<div class="clearfix"></div>
<!-- END HEADER & CONTENT DIVIDER -->
<!-- BEGIN CONTAINER -->
<div class="page-container">
    <% include ../partials/side_bar %>
    <!-- BEGIN CONTENT -->
    <div class="page-content-wrapper">
        <!-- BEGIN CONTENT BODY -->
        <div class="page-content">
            <% include ../partials/page_title %>
            <!-- BEGIN PAGE BREADCRUMB -->
            <ul class="page-breadcrumb breadcrumb">
                <li>
                    <a href="./">Dashboard</a>
                    <i class="fa fa-circle"></i>
                </li>
            </ul>
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-dark">
                        <i class="icon-settings font-dark"></i>
                        <span class="caption-subject bold uppercase">Giftcode Events</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="search_wrap">
                        <div class="input-group">
                            <button class="btn sbold green btn_add_new_item"> Add New
                                <i class="fa fa-plus"></i>
                            </button>
                        </div>
                        <div class="input-group">
                            <input type="text" class="search_input" placeholder="Search.."/>
                        </div>
                        <div class="input-group">
                            <button class="search_submit btn btn-success">Apply</button>
                            <button class="search_clear btn" style="margin-left:10px;">Clear</button>
                        </div>
                    </div>
                    <table class="table table-striped table-bordered table-hover table-checkable order-column" id="page_datatable"></table>
                    <div class="datatable_paging"></div>
                </div>
                <!--confirm modal-->
                <div id="modal_confirm" class="modal fade modal-sm" tabindex="-1" data-width="420">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                        <h4 class="modal-title"></h4>
                    </div>
                    <div class="modal-body">
                        Are you sure?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn green btn_confirm_yes">Yes</button>
                        <button type="button" data-dismiss="modal" class="btn btn-outline dark">No</button>
                    </div>
                </div>
                <!--modal add edit-->
                <div id="modal_add_edit" class="modal fade modal-scroll" tabindex="-1" data-width="90%">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                        <h4 class="modal-title">Create New Tag</h4>
                    </div>
                    <div class="modal-body">
                        <div class="portlet-body form">
                            <!-- BEGIN FORM-->
                            <form id="add_giftcode_form" action="#" class="form-horizontal" enctype="multipart/form-data">
                                <div class="form-body">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Title *</label>
                                        <div class="col-md-6">
                                            <input type="text" class="txt_add_edit_item_name form-control" name="eventName">
                                            <p class="help-block"> Tiêu đề</p>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Giftcode *</label>
                                        <div class="col-md-6">
                                            <input type="file" name="giftCodeFile" class="file_add_edit_item_giftcode">
                                            <p class="help-block">_ Chỉ cho phép file xlsx (Excel) <br>
                                                _ Tất cả giftcode nằm trong cột A, tính bắt đầu từ A1 (Tối đa 1000
                                                giftcode)<br>
                                                _ Tên file
                                                chỉ chứa chữ, số, dấu gạch ngang ( - ), dấu gạch dưới ( _ )</p>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Available in *</label>
                                        <div class="col-md-6">
                                            <select id="single_select_showing" class="form-control select2" name="showing">
                                                <option value="1">Simba App</option>
                                                <option value="2">Simba Website</option>
                                                <option value="3">Both Simba App & Website</option>
                                                <option value="4">Game Plugin</option>
                                            </select>
                                            <p class="help-block">Chọn nơi phát giftcode</p>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Price *</label>
                                        <div class="col-md-6">
                                            <input type="number" min="0" class="txt_add_edit_item_price form-control" name="price">
                                            <p class="help-block"> Giá gitftcode</p>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Vip *</label>
                                        <div class="col-md-6">
                                            <input type="number" min="0" class="txt_add_edit_item_vip form-control" name="vipLevel">
                                            <p class="help-block">Cấp vip yêu cầu</p>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Game *</label>
                                        <div class="col-md-6">
                                            <select id="single_select_game" class="form-control select2" name="gameId">
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Conditions *</label>
                                        <div class="checkbox-list col-md-6 cb_add_edit_item_condition">
                                        </div>
                                        <input type="hidden" name="conditionId" class="hidden_add_edit_item_condidion"/>
                                    </div>
                                    <div class="form-group group_condition group_login">
                                        <label class="col-md-3 control-label">Game login</label>
                                        <div class="col-md-6">
                                            <select id="single_select_game_login" class="form-control select2" name="scoinGameId">
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group group_condition group_download">
                                        <label class="col-md-3 control-label">Android download URL</label>
                                        <div class="col-md-6">
                                            <input type="text" name="urlDownloadAndroid" class="txt_add_edit_item_android form-control">
                                            <p class="help-block">Link dẫn đến game trên Playstore</p>
                                        </div>
                                    </div>
                                    <div class="form-group group_condition group_download">
                                        <label class="col-md-3 control-label">iOS download URL</label>
                                        <div class="col-md-6">
                                            <input name="urlDownloadiOS" type="text" class="txt_add_edit_item_ios form-control">
                                            <p class="help-block">Link dẫn đến game trên Appstore</p>
                                        </div>
                                    </div>
                                    <div class="form-group group_condition group_download">
                                        <label class="col-md-3 control-label">Android package name</label>
                                        <div class="col-md-6">
                                            <input name="" type="text" class="txt_add_edit_item_package_android form-control">
                                            <p class="help-block">Dùng để kiểm tra game đã cài đặt (vd: com.au.mobile)</p>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group group_condition group_download">
                                        <label class="col-md-3 control-label">iOS URL Schemes</label>
                                        <div class="col-md-6">
                                            <input name="" type="text" class="txt_add_edit_item_package_ios form-control">
                                            <p class="help-block">Dùng để kiểm tra game đã cài đặt (vd: fb942944085730098)</p>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group group_condition group_download">
                                        <label class="col-md-3 control-label">Download game</label>
                                        <div class="col-md-6">
                                            <input name="gameDownloadName" type="text" class="txt_add_edit_item_download_game form-control">
                                            <p class="help-block">Tên game/app cần download</p>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group group_condition group_share">
                                        <label class="col-md-3 control-label">Share url</label>
                                        <div class="col-md-6">
                                            <input name="" type="text" class="txt_add_edit_item_share form-control" placeholder="Url to share">
                                            <p class="help-block"></p>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Image Url *</label>
                                        <div class="col-md-6">
                                            <input type="text" required name="defaultImageUrl" class="txt_add_edit_item_image_url form-control"
                                                   placeholder="Event image URL">
                                            <p class="help-block">Ảnh vuông hiển thị trên list, kích thước 512x512, dung lượng max 1MB</p>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Item Image Url *</label>
                                        <div class="col-md-6">
                                            <input type="text" required name="itemImageUrl" class="txt_add_edit_item_image_item_url form-control"
                                                   placeholder="Event image URL">
                                            <p class="help-block">Link ảnh banner hiển thị trong chi tiết giftcode, kích thước 343x192, dung lượng max 1MB</p>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-3">Start Date *</label>
                                        <div class="col-md-4">
                                            <div class="input-group date form_datetime">
                                                <input type="text" size="16" readonly class="form-control txt_add_edit_item_dateStart">
                                                <input type="hidden" name="dateStartEvent" class="hidden_start_date">
                                                <span class="input-group-btn" style="background:#e1e5ec;">
                                                    <button class="btn default date-set" type="button">
                                                        <i class="fa fa-calendar"></i>
                                                    </button>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-3">End Date *</label>
                                        <div class="col-md-4">
                                            <div class="input-group date form_datetime">
                                                <input type="text" size="16" readonly class="form-control txt_add_edit_item_dateEnd">
                                                <input type="hidden" name="dateEndEvent" class="hidden_end_date">
                                                <span class="input-group-btn" style="background:#e1e5ec;">
                                                    <button class="btn default date-set" type="button">
                                                        <i class="fa fa-calendar"></i>
                                                    </button>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Description *</label>
                                        <div class="col-md-6">
                                            <textarea class="area_add_edit_item_desc" name="description" placeholder="Description of event"> </textarea>
                                            <p class="help-block">Mô tả về giftcode event, Nhập tối đa 200 kí tự. (
                                                <span class="character_left">200</span>).</p>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Message Notify *</label>
                                        <div class="col-md-6">
                                            <textarea class="area_add_edit_item_message_notify" name="messageNotifi"
                                                      placeholder="Notify message of giftcode event"> </textarea>
                                            <p class="help-block">Tự động gửi khi Active gói Giftcode.</p>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Status</label>
                                        <div class="col-md-4">
                                            <select name="status" class="bs-select form-control input-small select_status" data-style=" btn-success">
                                                <option value="active">Active</option>
                                                <option value="inactive">Inactive</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" data-dismiss="modal" class="btn btn-outline dark">Close</button>
                        <button type="button" class="btn green btn_modal_save_new">Add</button>
                        <button type="button" class="btn green btn_modal_save_update">Save Change</button>
                    </div>
                </div>

            </div>
        </div>
        <!-- END CONTENT BODY -->
    </div>
    <!-- END CONTENT -->
