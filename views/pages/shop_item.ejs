<body class="page-container-bg-solid page-header-fixed page-sidebar-closed-hide-logo">
	<% include ../partials/header %>
		<!-- BEGIN HEADER & CONTENT DIVIDER -->
		<div class="clearfix"></div>
		<!-- END HEADER & CONTENT DIVIDER -->
		<!-- BEGIN CONTAINER -->
		<div class="page-container">
			<% include ../partials/side_bar %>
				<!-- BEGIN CONTENT -->
				<div class="page-content-wrapper">
					<!-- BEGIN CONTENT BODY -->
					<div class="page-content">
						<% include ../partials/page_title %>
							<!-- BEGIN PAGE BREADCRUMB -->
							<ul class="page-breadcrumb breadcrumb">
								<li>
									<a href="./">Dashboard</a>
									<i class="fa fa-circle"></i>
								</li>
							</ul>
							<div class="portlet light bordered">
								<div class="portlet-title">
									<div class="caption font-dark">
										<i class="icon-settings font-dark"></i>
										<span class="caption-subject bold uppercase">shop item</span>
									</div>
								</div>

								<div class="portlet-body">
									<div class="search_wrap">
										<div class="input-group">
											<button class="btn sbold green btn_add_new_item"> Add New
												<i class="fa fa-plus"></i>
											</button>
										</div>
										<div class="input-group">
											<input type="text" class="search_input" />
										</div>
										<div class="input-group">
											<button class="search_submit btn btn-success">Apply</button>
											<button class="search_clear btn" style="margin-left:10px;">Clear</button>
										</div>
									</div>
									<table class="table table-striped table-bordered table-hover table-checkable order-column" id="page_datatable"></table>
									<div class="datatable_paging"></div>
								</div>

								<!--confirm modal-->
								<div id="modal_confirm" class="modal fade modal-sm" tabindex="-1" data-width="420">
									<div class="modal-header">
										<button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
										<h4 class="modal-title"></h4>
									</div>
									<div class="modal-body">
										Are you sure?
									</div>
									<div class="modal-footer">
										<button type="button" class="btn green btn_confirm_yes">Yes</button>
										<button type="button" data-dismiss="modal" class="btn btn-outline dark">No</button>
									</div>
								</div>

								<!--modal add edit-->
								<div id="modal_add_edit" class="modal fade modal-scroll" tabindex="-1" data-width="70%">
									<div class="modal-header">
										<button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
										<h4 class="modal-title">Create New Item</h4>
									</div>
									<div class="modal-body">
										<div class="portlet-body form">
											<!-- BEGIN FORM-->
											<div id="add_giftcode_form" class="form-horizontal">
												<div class="form-body">
													<div class="form-group">
														<label class="col-md-3 control-label">Name</label>
														<div class="col-md-6">
															<input type="text" class="txt_add_edit_item_name form-control" name="name" placeholder="Enter name">
															<p class="help-block">Tên vật phẩm</p>
														</div>
													</div>
													<div class="form-group">
														<label class="col-md-3 control-label">Item type</label>
														<div class="col-md-6">
															<select id="single_select_item_type" class="form-control select2">
																<option value="1">Normal</option>
																<option value="2">Giftcode</option>
																<option value="3">Event</option>
															</select>
															<p class="help-block">Dạng vật phẩm</p>
														</div>
													</div>


													<div class="form-group giftcode_group">
														<form id="form_upload_giftcode" enctype="multipart/form-data">
															<label class="col-md-3 control-label">Giftcode file Upload</label>
															<div class="col-md-4">
																<input type="file" name="file" class="txt_add_edit_item_upload form-control" />
																<p class="help-block">Giftcode file</p>
															</div>
															<div class="col-md-5">
																<button type="button" class="btn btn-outline blue btn_modal_upload_giftcode">Upload</button>
															</div>
														</form>
													</div>
													<div class="form-group giftcode_group">
														<label class="col-md-3 control-label">Giftcode</label>
														<div class="col-md-9">
															<div class="image_item_giftcode"></div>
															<input type="hidden" class="uploaded_giftcode" />
														</div>
													</div>

													<div class="form-group form-package">
														<label class="col-md-3 control-label">Package id</label>
														<div class="col-md-6">
															<input type="text" class="txt_add_edit_item_package_id form-control" name="package_id" placeholder="Enter package id">
															<p class="help-block">Id được định danh của mỗi service Game</p>
														</div>
													</div>

													<div class="form-group">
														<label class="col-md-3 control-label">Hot title</label>
														<div class="col-md-6">
															<select id="single_select_hot_title" class="form-control select2">
																<option value="new">New</option>
																<option value="hot">Hot</option>
															</select>
															<p class="help-block">Title của vật phẩm</p>
														</div>
													</div>
													<div class="form-group">
														<label class="col-md-3 control-label">Price</label>
														<div class="col-md-6">
															<input type="text" class="txt_add_edit_item_price form-control" name="name" placeholder="Enter price">
															<p class="help-block">Giá vật phẩm</p>
														</div>
													</div>

													<div class="form-group">
														<label class="col-md-3 control-label">Loại Tiền</label>
														<div class="col-md-6">
															<select id="single_select_coin_type" class="form-control select2">
																<option value="SCOIN">Scoin</option>
																<option value="XU" disabled="disabled" title="Đang phát triển">Xu</option>
																<option value="THIT" disabled="disabled" title="Đang phát triển">Thịt</option>
															</select>
															<p class="help-block">Thể loại tiền tệ để mua vật phẩm</p>
														</div>
													</div>

													<div class="form-group">
														<label class="col-md-3 control-label">Quantity</label>
														<div class="col-md-6">
															<input type="text" class="txt_add_edit_item_quantity form-control" placeholder="Quantity">
															<p class="help-block">Số lượng vật phẩm</p>
														</div>
													</div>
													<div class="form-group">
														<form id="form_upload_icon" enctype="multipart/form-data">
															<label class="col-md-3 control-label">Icon Upload</label>
															<div class="col-md-4">
																<label for="file" style="position: absolute;" class="btn yellow">Chọn Ảnh</label>
																<input type="file" name="file" style="opacity: 0;position: relative;height: 44px;width: 119px" class="txt_add_edit_item_upload form-control" />
																<p class="help-block">Icon nhỏ hiển thị trên trang chủ</p>
															</div>
															<div class="col-md-5">
																<button type="button" class="btn btn-outline blue btn_modal_upload_icon">Upload
																</button>
															</div>
														</form>
													</div>
													<div class="form-group">
														<label class="col-md-3 control-label">Icon</label>
														<div class="col-md-9">
															<div class="image_item_icon"></div>
														</div>
													</div>
													<div class="form-group">
														<form id="form_upload_big_image" enctype="multipart/form-data">
															<label class="col-md-3 control-label">Big image Upload</label>
															<div class="col-md-4">
																<label for="file" style="position: absolute;" class="btn yellow">Chọn Ảnh</label>
																<input type="file" name="file" style="opacity: 0;position: relative;height: 44px;width: 119px" class="txt_add_edit_item_upload form-control" />
																<p class="help-block">Ảnh lớn hiển thị trong trang chi tiết</p>
															</div>
															<div class="col-md-5">
																<button type="button" class="btn btn-outline blue btn_modal_upload_big_image">Upload
																</button>
															</div>
														</form>
													</div>
													<div class="form-group">
														<label class="col-md-3 control-label">Big image</label>
														<div class="col-md-9">
															<div class="image_item_big_image"></div>
														</div>
													</div>
													<div class="form-group">
														<label class="col-md-3 control-label">Shop</label>
														<div class="col-md-6">
															<select id="single_select_shop" class="form-control select2">
																<option></option>
															</select>
														</div>
													</div>
													<div class="form-group">
														<label class="col-md-3 control-label">Gender</label>
														<div class="col-md-6">
															<select id="single_select_gender" class="form-control select2">
																<option value="nam">Nam</option>
																<option value="nu">Nữ</option>
															</select>
															<p class="help-block">Giới tính</p>
														</div>
													</div>
													<div class="form-group">
														<label class="col-md-3 control-label">Category</label>
														<div class="col-md-6">
															<select id="single_select_category" class="form-control select2">
																<option value="toc">Tóc</option>
																<option value="quan">Quần</option>
																<option value="ao">Áo</option>
																<option value="giay">Giày</option>
																<option value="phukien">Phụ kiện</option>
															</select>
															<p class="help-block">Thể loại</p>
														</div>
													</div>
													<div class="form-group">
														<label class="col-md-3 control-label">Mô tả</label>
														<div class="col-md-9">
															<textarea id="des" name="des" class="txt_add_edit_item_des form-control"></textarea>
														</div>
													</div>
													<div class="form-group">
														<form id="form_upload" enctype="multipart/form-data">
															<label class="col-md-3 control-label">Screenshot Upload</label>
															<div class="col-md-4">
																<input type="file" name="file" class="txt_add_edit_item_upload form-control" />
																<p class="help-block">Upload 4 screenshot trở lên nếu có</p>
															</div>
															<div class="col-md-5">
																<button type="button" class="btn btn-outline blue btn_modal_upload">
																	Upload
																</button>
															</div>
														</form>
													</div>
													<div class="form-group">
														<label class="col-md-3 control-label">Saved</label>
														<div class="col-md-9">
															<div class="image_item"></div>
														</div>
													</div>
													<div class="form-group">
														<label class="col-md-3 control-label">Status</label>
														<div class="col-md-9">
															<select name="status" class="bs-select form-control input-small select_status" data-style=" btn-success">
																<option value="active">Active</option>
																<option value="inactive">Inactive</option>
															</select>
															<input type="hidden" name="status" value="active" class="hidden_item_status" />
															<p class="help-block">Trạng thái (ẩn/hiện trên client)</p>
															<hr style="border: 1px solid #EEE;">
														</div>
													</div>

													<div class="form-group">
														<label class="col-md-3 control-label"></label>
														<div class="col-md-9">
															<h2 style="margin-left: 255px;">Cài Đặt Khuyến Mại 
																<input id="isPromotion" type="checkbox" name="my-checkbox" data-on-text="ON" data-off-text="OFF"
																data-on-color="success" data-off-color="success">
															</h2>
														</div>
													</div>

													<div class="form-group">
														<label class="col-md-3 control-label">Chương Trình KM</label>
														<div class="form-promotion">
															<div class="col-md-7">
																<select id="promotion_select" class="form-control select2">
																</select>
															</div>
														</div>
													</div>
													<div class="form-group">
														<label class="col-md-3 control-label">Sale Off (%)</label>
														<div class="form-promotion">
															<div class="col-md-2">
																<input type="text" class="form-control txt_promotion_tag_view">
															</div>
															<div class="col-md-5">
																<span class="col-md-3 control-label">Dùng Sale Off</span>
																<input id="is_sale_percent" name="is_sale_percent" type="checkbox">
																<span style="float:right" class="col-md-8">( <i>Khi dùng Sale Off (%) giá mới sẽ cố định</i> )</span>
															</div>
														</div>
														
													</div>
													<div class="form-group">
														<label class="col-md-3 control-label">Giá KM</label>
														<div class="form-promotion">
															<div class="col-md-2">
																<input type="number" min="1" class="form-control txt_promotion_price">
															</div>
															<div class="col-md-5">
																<span class="col-md-3 control-label">Số Lượng KM</span>
																<input type="text" style="width: 35%;" class="form-control txt_promotion_quantity">
															</div>
														</div>
														</div>
													</div>
												</div>
											</div>
										</div>
										<div class="modal-footer">
											<button type="button" data-dismiss="modal" class="btn btn-outline dark">Close</button>
											<button type="button" class="btn green btn_modal_save_new">Add</button>
											<button type="button" class="btn green btn_modal_save_update">Save Change</button>
										</div>
									</div>
								</div>
							</div>
					</div>
				</div>
		</div>
