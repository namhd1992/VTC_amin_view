<body class="page-container-bg-solid page-header-fixed page-sidebar-closed-hide-logo">
	<% include ../partials/header %>
		<!-- BEGIN HEADER & CONTENT DIVIDER -->
		<div class="clearfix"> </div>
		<!-- END HEADER & CONTENT DIVIDER -->
		<!-- BEGIN CONTAINER -->
		<div class="page-container">
			<% include ../partials/side_bar %>
				<!-- BEGIN CONTENT -->
				<div class="page-content-wrapper">
					<!-- BEGIN CONTENT BODY -->
					<div class="page-content">
						<% include ../partials/page_title %>
							<!-- BEGIN PAGE BREADCRUMB -->
							<ul class="page-breadcrumb breadcrumb">
								<li>
									<a href="./">Dashboard</a>
									<i class="fa fa-circle"></i>
								</li>
							</ul>
							<div class="portlet light bordered">
								<div class="portlet-title">
									<div class="caption font-dark">
										<i class="icon-settings font-dark"></i>
										<span class="caption-subject bold uppercase">Spin Items</span>
									</div>
								</div>

								<div class="portlet-body">
									<div class="search_wrap">
										<div class="input-group">
											<button class="btn sbold green btn_add_new_item"> Add New
												<i class="fa fa-plus"></i>
											</button>
										</div>
										<div class="input-group">
											<input type="text" class="search_input" placeholder="Search..." />
										</div>
										<div class="input-group">
											<button class="search_submit btn btn-success">Apply</button>
											<button class="search_clear btn" style="margin-left:10px;">Clear</button>
										</div>
									</div>
									<table class="table table-striped table-bordered table-hover table-checkable order-column" id="page_datatable"></table>
									<div class="datatable_paging"></div>
								</div>

								<!--confirm modal-->
								<div id="modal_confirm" class="modal fade modal-sm" tabindex="-1" data-width="420">
									<div class="modal-header">
										<button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
										<h4 class="modal-title"></h4>
									</div>
									<div class="modal-body">
										Are you sure?
									</div>
									<div class="modal-footer">
										<button type="button" class="btn green btn_confirm_yes">Yes</button>
										<button type="button" data-dismiss="modal" class="btn btn-outline dark">No</button>
									</div>
								</div>

								<!--modal add edit-->
								<div id="modal_add_edit" class="modal fade modal-scroll" tabindex="-1" data-width="70%">
									<div class="modal-header">
										<button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
										<h4 class="modal-title">Create New Item</h4>
									</div>
									<div class="modal-body">
										<div class="portlet-body form">
											<!-- BEGIN FORM-->
											<form id="add_giftcode_form" action="#" class="form-horizontal" enctype="multipart/form-data">
												<div class="form-body">
													<div class="form-group">
														<label class="col-md-3 control-label">Name</label>
														<div class="col-md-6">
															<input type="text" class="txt_add_edit_item_name form-control" name="name" placeholder="Enter item name">
															<input type="hidden" class="hidden_add_edit_item_is_default form-control" name="isDefault" value="0">
														</div>
													</div>
													<div class="form-group">
														<label class="col-md-3 control-label">Wheel title</label>
														<div class="col-md-6">
															<input type="text" class="txt_add_edit_item_wheel_title form-control" name="wheelTitle" placeholder="Enter wheel title">
															<p class="help-block">Tiêu đề hiển thị của item trên vòng quay nhỏ hơn 10 ký tự</p>
														</div>
													</div>
													<div class="form-group">
														<label class="col-md-3 control-label">Winning title</label>
														<div class="col-md-6">
															<input type="text" class="txt_add_edit_item_winning_title form-control" value="Chúc mừng bạn đã trúng" name="winningTitle" placeholder="Enter winning title">
															<p class="help-block">Text hiển thị khi người dùng quay được item nhỏ hơn 100 ký tự</p>
														</div>
													</div>
													<div class="form-group">
														<label class="col-md-3 control-label">Description</label>
														<div class="col-md-6">
															<textarea type="text" class="txt_add_edit_item_description form-control" rows="4" cols="50" name="des" placeholder="Description"></textarea>
														</div>
													</div>
													<div class="form-group">
														<label class="col-md-3 control-label">Big Item</label>
														<div class="col-md-4">
															<select class="bs-select form-control input-small select_big_item" name="bigItem" data-style=" btn-active">
																<option value="false">No</option>
																<option value="true">Yes</option>
															</select>
														</div>
													</div>

													<div class="form-group">
														<label class="col-md-3 control-label">Image</label>
														<div class="col-md-6">
															<label for="file" style="position: absolute;" class="btn yellow">Chọn Ảnh</label>
															<input type="button" id="upload_image_text" style="position: absolute; left: 126px;" class="btn green" value="Upload">
															<input type="file" style="opacity: 0;position: relative;height: 44px;width: 119px" id="txt_add_edit_image_text" />
															<img width="75;" id="review_image_text" />
															<p class="help-block">75 x 75</p>
														</div>
													</div>

													<div class="form-group form_link_image_text form_link_image">
														<label class="col-md-3 control-label">Link Image</label>
														<div class="col-md-6">
															<div id="link_image_text"></div>
														</div>
													</div>

													<div class="form-group">
														<label class="col-md-3 control-label">Type</label>
														<div class="col-md-4">
															<select class="form-control select_type">
																<option value="0">Choose Type Item</option>
																<option value="XU">Xu</option>
																<option value="SCOIN">Scoin</option>
																<option value="ACTION">Action</option>
																<option value="LUCKY_NUMBER">Mã số dự thưởng</option>
																<option value="GIFTCODE">Giftcode</option>
																<option value="SCOIN_CARD">Thẻ Scoin</option>
																<option value="REALITY">Sản phẩm thật</option>
																<option class="option_admin_type" value="JACKPOT">Jackpot</option>
															</select>
															<input type="hidden" name="type" value="giftcode" class="hidden_item_type" />
															<input type="hidden" name="isDefault" value="0" class="hidden_item_is_default" />
														</div>
													</div>
													<div style="display: none" class="form-group form-up-giftcode">
														<label class="col-md-3 control-label">Giftcode</label>
														<div class="col-md-6">
															<input type="file" name="giftCodeFile" class="file_add_edit_item_giftcode">
															<p class="help-block">Chỉ cho phép file csv, tất cả giftcode nằm trong cột A, tính bắt đầu từ A1 (Tối đa 1000 giftcode). Tên file
																chỉ chứa chữ, số, dấu gạch ngang (-), dấu gạch dưới (_)</p>
														</div>
													</div>
													<div class="form-group form-quantity">
														<label class="col-md-3 control-label">Quantity</label>
														<div class="col-md-6">
															<input type="number" class="txt_add_edit_item_quantity form-control" name="quantity" value="1" min="1" />
															<p class="help-block">Số lượng của item</p>
														</div>
													</div>
													<div class="form-group">
														<label class="col-md-3 control-label">Value</label>
														<div class="col-md-6">
															<input type="number" class="txt_add_edit_item_value form-control" name="value" value="1" min="1" />
															<p class="help-block">Gía trị phần thưởng (Mệnh giá thẻ nếu type là thẻ scoin)</p>
														</div>
													</div>
													<div class="form-group">
														<label class="col-md-3 control-label">Trạng Thái</label>
														<div class="col-md-6">
															<select name="status" class="bs-select form-control input-medium select_status" data-style=" btn-success">
																<option value="active">Hoạt Động</option>
																<option value="inactive">Không Hoạt Động</option>
															</select>
															
															<input type="hidden" class="hidden_item_status" />
															<span class="col-md-3" style="float:right;">  
																<label class="control-label">Nổi Bật :</label>

																<!-- checkbox nổi bật -->
																<input id="my-checkbox" type="checkbox" name="highlights" data-on-text="ON" data-off-text="OFF"
																 data-on-color="success" data-off-color="success">
															</span>
															<p class="help-block">Trạng thái (ẩn/hiện trên client)</p>
															
														</div>
													</div>
												</div>
											</form>
										</div>
									</div>
									<div class="modal-footer">
										<button type="button" data-dismiss="modal" class="btn btn-outline dark">Close</button>
										<button type="button" class="btn green btn_modal_save_new">Add</button>
										<button type="button" class="btn green btn_modal_save_update">Save Change</button>
									</div>
								</div>
							</div>
					</div>
				</div>
		</div>
