<body class="page-container-bg-solid page-header-fixed page-sidebar-closed-hide-logo">
    <% include ../partials/header %>
        <!-- BEGIN HEADER & CONTENT DIVIDER -->
        <div class="clearfix"> </div>
        <!-- END HEADER & CONTENT DIVIDER -->
        <!-- BEGIN CONTAINER -->
        <div class="page-container">
            <% include ../partials/side_bar %>
                <!-- BEGIN CONTENT -->
                <div class="page-content-wrapper">
                    <!-- BEGIN CONTENT BODY -->
                    <div class="page-content">
                        <% include ../partials/page_title %>
                            <!-- BEGIN PAGE BREADCRUMB -->
                            <ul class="page-breadcrumb breadcrumb">
                                <li>
                                    <a href="./">Dashboard</a>
                                    <i class="fa fa-circle"></i>
                                </li>
                            </ul>
                            <div class="portlet light bordered">
                                <div class="portlet-title">
                                    <div class="caption font-dark">
                                        <i class="icon-settings font-dark"></i>
                                        <span class="caption-subject bold uppercase">Betting Events</span>
                                    </div>
                                </div>

                                <div class="portlet-body">
                                    <div class="search_wrap">
                                        <div class="input-group">
                                            <button class="btn sbold green btn_add_new_item"> Add New <i class="fa fa-plus"></i></button>
                                        </div>
                                        <div class="input-group">
                                            <span class="input-group-addon"> Match </span>
                                            <select id="single_select_match_filter" class="select2">
												<option></option>
											</select>
                                        </div>
                                        <div class="input-group">
                                            <span class="input-group-addon"> Name </span>
                                            <input type="text" class="search_input" style="width: 100%;" />
                                        </div>
                                        <div class="input-group">
                                            <button class="search_submit btn btn-success">Apply</button>
                                            <button class="search_clear btn" style="margin-left:10px;">Clear</button>
                                        </div>
                                    </div>
                                    <table class="table table-striped table-bordered table-hover table-checkable order-column" id="page_datatable"></table>
                                    <div class="datatable_paging"></div>
                                </div>

                                <!--confirm modal-->
                                <div id="modal_confirm" class="modal fade modal-sm" tabindex="-1" data-width="420">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                                        <h4 class="modal-title"></h4>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn green btn_confirm_yes">Yes</button>
                                        <button type="button" data-dismiss="modal" class="btn btn-outline dark">No</button>
                                    </div>
                                </div>

                                <!--modal add edit-->
                                <div id="modal_add_edit" class="modal fade modal-scroll" tabindex="-1" data-width="80%">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                                        <h4 class="modal-title">Create New Item</h4>
                                    </div>
                                    <div class="modal-body">
                                        <div class="portlet-body form">
                                            <!-- BEGIN FORM-->
                                            <form id="add_giftcode_form" action="#" class="form-horizontal" enctype="multipart/form-data">
                                                <div class="form-body">
                                                    <div class="form-group">
                                                        <label class="col-md-3 control-label">Name</label>
                                                        <div class="col-md-4">
                                                            <input type="text" class="txt_add_edit_item_name form-control" name="name" placeholder="Enter event name">
                                                            <p class="help-block">Tên kèo bet (Vd: thắng chung cuộc, 10 kills đầu, kill đầu tiên, ...)</p>
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="control-label col-md-3">Start betting</label>
                                                        <div class="col-md-4">
                                                            <div class="input-group date form_datetime">
                                                                <input type="text" size="16" readonly class="form-control txt_add_edit_item_date_start">
                                                                <span class="input-group-btn">
                                                            <button class="btn default date-set" type="button">
                                                                <i class="fa fa-calendar"></i>
                                                            </button>
                                                        	</span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="control-label col-md-3">End betting</label>
                                                        <div class="col-md-4">
                                                            <div class="input-group date form_datetime">
                                                                <input type="text" size="16" readonly class="form-control txt_add_edit_item_date_end">
                                                                <span class="input-group-btn">
                                                            	<button class="btn default date-set" type="button">
                                                                <i class="fa fa-calendar"></i>
                                                            	</button>
																</span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="col-md-3 control-label">Match</label>
                                                        <div class="col-md-4">
                                                            <select id="single_select_match" class="form-control select2 select_normal">
																<option></option>
															</select>
                                                            <p class="help-block">Trận đấu</p>
                                                        </div>
                                                    </div>
                                                    <div class="form-group" style="display:none;">
                                                        <label class="col-md-3 control-label">Winner</label>
                                                        <div class="col-md-4">
                                                            <select name="winner" class="bs-select form-control input-small select_winner" data-style="">
                                                                <option value="0" class="unknow_winner">Unknown</option>
                                                                <option value="1" class="team1_winner"></option>
                                                                <option value="2" class="team2_winner"></option>
                                                                <option value="3" class="draw_winner">Draw</option>
															</select>
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="col-md-3 control-label">Betting type</label>
                                                        <div class="col-md-4">
                                                            <select name="bet_type" class="bs-select form-control input-small select_bet_type" data-style="">
                                                                <option value="1">Fix Odds</option>
                                                                <option value="2">Estimate Odds</option>
															</select>
                                                            <p class="help-block">Fix Odds: publisher tự điều chỉnh tỉ lệ</p>
                                                            <p class="help-block">Estimate Odds: hệ thống tự điều chỉnh tỉ lệ (sẽ tự cân bằng số tiền để không thất thoát LP tuy nhiên cũng sẽ thu lại ít LP)</p>
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="col-md-3 control-label">Ratio</label>
                                                        <div class="col-md-3">
                                                            <p class="help-block help_team1"></p>
                                                            <input type="number" name="firstTeamRatio" min=0 value="active" class="form-control txt_first_team_ratio" />
                                                            <p class="help-block">Tỉ lệ đội 1</p>
                                                        </div>
                                                        <div class="col-md-3">
                                                            <p class="help-block help_team2"></p>
                                                            <input type="number" name="secondTeamRatio" min=0 value="active" class="form-control txt_second_team_ratio" />
                                                            <p class="help-block">Tỉ lệ đội 2</p>
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="col-md-3 control-label">Status</label>
                                                        <div class="col-md-4">
                                                            <select name="status" class="bs-select form-control input-small select_status" data-style=" btn-success">
                                                                <option value="active">Active</option>
                                                                <option value="inactive">Inactive</option>
															</select>
                                                            <input type="hidden" name="status" value="active" class="hidden_item_status" />
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" data-dismiss="modal" class="btn btn-outline dark">Close</button>
                                        <button type="button" class="btn green btn_modal_save_new">Add</button>
                                        <button type="button" class="btn green btn_modal_save_update">Save Change</button>
                                    </div>
                                </div>
                            </div>
                    </div>
                </div>
        </div>
        <% include ../partials/footer %>
            <% include ../partials/foot_of_foot %>
                <!--PLUGIN SCRIPTS-->
                <script src="../assets/global/plugins/moment.min.js" type="text/javascript"></script>
